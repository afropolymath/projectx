html
  head
    base(href="/")
    title ProjectX
    link(rel="stylesheet" href="lib/mdi/css/materialdesignicons.min.css")
    link(rel="stylesheet" href="css/app.min.css")
  body(ng-app="ProjectX")
    .app.flex.column-layout
      header
        .container-fluid.flex.row-layout.vertical-center
          .logo ProjectX
          nav.fill-layout
            ul.flex.start-right
              li
                a(href="#") Logged in as Chidiebere I. Nnadi
      section.main.flex.row-layout.fill-layout
        .sidebar
          ul
            li.selected
              a(href="#")
                i.mdi.mdi-credit-card-multiple
                | Transactions
            li
              a(href="#")
                i.mdi.mdi-code-braces
                | Message Formats
            li
              a(href="#")
                i.mdi.mdi-settings
                | Settings
        .content-pane.has-scrollable.fill-layout
          .scrollable
            .page
              ui-view
    script(src="lib/angular/angular.js")
    script(src="lib/moment/min/moment.min.js")
    script(src="lib/firebase/firebase.js")
    script(src="lib/angularfire/dist/angularfire.min.js")
    script(src="lib/angular-cookies/angular-cookies.min.js")
    script(src="lib/angular-ui-router/release/angular-ui-router.min.js")
    script(src="js/index.js")